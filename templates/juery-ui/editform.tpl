<form>
	{toolbar}
	<textarea name='comment' class='editarea' id='{textareaid}'>{text}</textarea>
	<center>
		<button id="comm_submit_btn" onClick="{ok_button_action}" aria-disabled="false" role="button" class="ui-button ui-state-default ui-corner-all ui-button-text-only">
			<span class="ui-button-text">Сохранить</span>
		</button>
		<button id="comm_submit_btn" onClick="{cancel_button_action}" aria-disabled="false" role="button" class="ui-button ui-state-default ui-corner-all ui-button-text-only">
			<span class="ui-button-text">Отмена</span>
		</button>
	</center>
</form>
