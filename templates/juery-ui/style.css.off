@charset "utf-8";

.ui-widget {
	margin-bottom: 15px;
	padding: 3px;
}
h3.ui-widget-header {
	padding: 10px 8px;
	margin: 0px;
}
.widget-content {
	padding: 10px 8px;
}
span.text-icon {
	display:inline; margin-right: .3em;padding-right:16px;
}
img.poster {
	float:left;
	margin: 10px 10px 10px 0px;
}
input.ui-input {
	padding: 5px 0;
	margin: .2em 0;
	vertical-align: middle;
	border: 1px solid #aed0ea;
	background: #fff;
	color: #362b36;
}
ul.nav {
	margin:0;padding:0;
}
ul.nav li{
	list-style-type:none;}
}

textarea.editarea {
	width: 460px;
	height: 110px;
}



* {
	margin: 0;
	padding: 0;
}
body {
	font: 12px/18px Arial, Tahoma, Verdana, sans-serif;
	width: 100%;
	margin: 0px;
}
a {
	color: blue;
	outline: none;
	text-decoration: underline;
}
a:hover {
	text-decoration: none;
}
p {
	margin: 0 0 18px
}
img {
	border: none;
}
input {
	vertical-align: middle;
}
#wrapper {
	width: 1024px;
	margin: 0 auto;
}


/* Header
-----------------------------------------------------------------------------*/
#header {
	/*height: 150px;*/
	margin-bottom: 15px;
}


/* Middle
-----------------------------------------------------------------------------*/
#middle {
	width: 100%;
	height: 1%;
	position: relative;
}
#middle:after {
	content: '';
	clear: both;
	display: table;
}
#container {
	width: 100%;
	float: left;
	overflow: hidden;
}
#content {
	padding: 0 270px 0 270px;
}


/* Sidebar Left
-----------------------------------------------------------------------------*/
#sideLeft {
	float: left;
	width: 250px;
	margin-left: -100%;
	position: relative;
}


/* Sidebar Right
-----------------------------------------------------------------------------*/
#sideRight {
	float: left;
	margin-right: -3px;
	width: 250px;
	margin-left: -250px;
	position: relative;
}


/* Footer
-----------------------------------------------------------------------------*/
#footer {
	height: 100px;
}